<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/image_view_contact_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/material_design_default_margin"
        android:src="@drawable/ic_baseline_person_pin_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/material_design_default_margin"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/image_view_contact_photo"
        app:layout_constraintStart_toEndOf="@id/image_view_contact_photo"
        app:layout_constraintTop_toTopOf="@id/image_view_contact_photo"
        tools:text="Contact name" />

    <TextView
        android:id="@+id/text_view_contact_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Contact category"
        app:layout_constraintTop_toBottomOf="@id/text_view_contact_name"
        app:layout_constraintStart_toStartOf="@id/text_view_contact_name"
        android:layout_marginTop="@dimen/material_design_default_margin"
        />

    <CheckBox
        android:id="@+id/checkbox_contact_important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/material_design_default_margin"
        android:text="@string/important_contact"
        app:layout_constraintBottom_toBottomOf="@id/image_view_contact_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_view_contact_photo" />


</androidx.constraintlayout.widget.ConstraintLayout>